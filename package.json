{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "chatgpt",
  "title": "ChatGPT",
  "description": "Chat with a chatbot powered by GPT-3",
  "icon": "command-icon.png",
  "author": "abielzulio",
  "categories": [
    "Applications"
  ],
  "license": "MIT",
  "preferences": [
    {
      "type": "password",
      "name": "sessionToken",
      "title": "Session Token",
      "required": true,
      "description": "Your ChatGPT session token"
    }
  ],
  "commands": [
    {
      "name": "ask",
      "title": "Ask Question",
      "description": "Ask ChatGPT via Raycast",
      "arguments": [
        {
          "name": "question",
          "type": "text",
          "placeholder": "question",
          "required": false
        }
      ],
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.44.0",
    "chatgpt": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
